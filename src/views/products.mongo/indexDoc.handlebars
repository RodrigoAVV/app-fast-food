<h2 id="mje"></h2>
<section class="row row-cols-1 row-cols-md-4 g-4">
{{#if user.role}}
    {{#each products}}
        <article class="col">
            <div class="card h-100">
                <img src={{this.thumbnail}} alt="" class="card-img-top">
                <div class="card-body">
                    <p class="card-title">{{this.description}}</p>
                    <p class="card-text">{{this.price}}</p>
                    <a href="#" class="btn btn-primary addProduct" id={{this._id}}>Agregar al carrito</a>
                </div>
            </div>
        </article>
    {{/each}}


    {{#if hasPrevPage}}
        <a href="/api/products2?page={{nextPage}}&limit=5"><button>siguiente</button></a>
    {{/if}}
    {{#if hasPrevPage}}
        <a href="/api/products2?page={{prevPage}}&limit=5"><button>Anterior</button></a>
    {{/if}}
{{/if}}
</section>
<script src="/js/products.mongo/addProduct.js"></script>